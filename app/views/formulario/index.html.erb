<h1>Login</h1>
<p>Ingresa tu E-Mail e imagen biométrica</p>

<%= form_tag({controller: "formulario", action: "respuesta", method: "post"}, multipart: true) do %>
    <p>
        <%= label_tag(:email, "E-Mail") %>
        <%= text_field_tag(:email) %>
    </p>
    <p>
        <%= label_tag(:image, "Imágen biométrica") %>
        <%= file_field_tag(:image) %>
    <p>
        <%= submit_tag("Enviar") %>
    </p>
<% end %>
